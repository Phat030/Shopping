@using Microsoft.AspNetCore.Identity
@using HomeShopping.Models.Domain


@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<div class="account_desc" style="font-weight:bolder;color:black">
    <ul>
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"
                   title="Welcome">Welcome @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-area="">
                    <button type="submit" class="nav-link btn btn-link text-info">
                        Logout
                    </button>
                </form>
            </li>
        }
        else
        {

            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login"><span class="glyphicon glyphicon-user"></span>Login</a>
            </li>       
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-log-in"></span>Register</a>
            </li>

        }
    </ul>
</div>