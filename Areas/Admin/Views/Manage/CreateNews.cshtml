            </div>
            <div class="form-group">
                <label asp-for="QuickView" class="control-label"></label>
                <input asp-for="QuickView" class="form-control" />
                <span asp-validation-for="QuickView" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsDate" class="control-label"></label>
                <input asp-for="NewsDate" class="form-control" type="date" />
                <span asp-validation-for="NewsDate" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="NewsTitle1" class="control-label"></label>
                    <input asp-for="NewsTitle1" class="form-control" />
                    <span asp-validation-for="NewsTitle1" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="NewsTitle2" class="control-label"></label>
                    <input asp-for="NewsTitle2" class="form-control" />
                    <span asp-validation-for="NewsTitle2" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="NewsTitle3" class="control-label"></label>
                    <input asp-for="NewsTitle3" class="form-control"  />
                    <span asp-validation-for="NewsTitle3" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="NewsTitle4" class="control-label"></label>
                    <input asp-for="NewsTitle4" class="form-control"  />
                    <span asp-validation-for="NewsTitle4" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="NewsImage1" class="control-label"></label>
                    <input asp-for="NewsImage1" class="form-control" type="file" />
                    <span asp-validation-for="NewsImage1" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="NewsImage2" class="control-label"></label>
                    <input asp-for="NewsImage2" class="form-control" type="file" />
                    <span asp-validation-for="NewsImage2" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="NewsImage3" class="control-label"></label>
                    <input asp-for="NewsImage3" class="form-control" type="file" />
                    <span asp-validation-for="NewsImage3" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="NewsImage4" class="control-label"></label>
                    <input asp-for="NewsImage4" class="form-control" type="file" />
                    <span asp-validation-for="NewsImage4" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Paragraph1" class="control-label"></label>
                    <input asp-for="Paragraph1" class="form-control" />
                    <span asp-validation-for="Paragraph1" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Paragraph2" class="control-label"></label>
                    <input asp-for="Paragraph2" class="form-control" />
                    <span asp-validation-for="Paragraph2" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label asp-for="Paragraph3" class="control-label"></label>
                    <input asp-for="Paragraph3" class="form-control" />
                    <span asp-validation-for="Paragraph3" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Paragraph4" class="control-label"></label>
                    <input asp-for="Paragraph4" class="form-control" />
                    <span asp-validation-for="Paragraph4" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="NewsTypeID" class="control-label"></label>
                <select asp-for="NewsTypeID" class="form-control" asp-items="ViewBag.NewsTypeID"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageNews" class="btn btn-danger" style="margin-left:20px">Back to List</a>
</div>

