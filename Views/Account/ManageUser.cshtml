@using HomeShopping.Models;

@model IEnumerable<HomeShopping.Models.Domain.User>
@{
    ViewData["Title"] = "ManageUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-sm-12">

        <h1>ManageUser</h1>

        <hr />

        <table class="table table-borderer">

            <thead>

                <tr>
                    <th>UserName</th>
                    <th>Họ tên</th>

                    <th>Email</th>
                 

                    <th></th>

                </tr>

            </thead>

            <tbody>

                @foreach (var item in Model)

                {

                    <tr>

                        <td>@item.UserName</td>
                        <td>@item.FirstName @item.LastName</td>

                        <td>@item.Email</td>   
                        <td>

                            @Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |

                            @*@Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |*@

                            @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)

                        </td>

                    </tr>

                }

            </tbody>

        </table>

    </div>

</div>

