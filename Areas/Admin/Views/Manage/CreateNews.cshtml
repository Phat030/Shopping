@model HomeShopping.Models.News

@{
    ViewData["Title"] = "CreateNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>CreateNews</h1>


<hr />
<div class="row" style="padding-left:10px;margin-left:20px" >
    <div class="col-md-10">
        <form asp-action="CreateNews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewsName" class="control-label"></label>
                <input asp-for="NewsName" class="form-control" />
