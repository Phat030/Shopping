
@{
    ViewData["Title"] = "Index";
}
<style>

    {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 80%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        resize: vertical;
    }

    label {
        padding: 12px 12px 12px 0;
        display: inline-block;
    }

    input[type=submit] {
        background-color: darkred;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-left: 400px;
    }

        input[type=submit]:hover {
            background-color: dodgerblue;
        }


    .dangnhap {
        border-radius: 5px;
        font-family: Courier New, Courier, monospace;
        padding: 20px;
    }

    .col-25 {
        float: left;
        width: 25%;
        margin-top: 6px;
    }

    .col-75 {
        float: left;
        width: 75%;
        margin-top: 6px;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    td h1 {
        color: chocolate;
        font-family: Courier New, Courier, monospace;
        font-weight: bolder;
    }

    td h3 {
        font-family: Courier New, Courier, monospace;
        padding-top: 10px;
        font-weight: bold;
    }

    label {
        font-size: 16px;
    }
</style>



<div class="dangnhap">
    <form action="" method="post" style=" padding-left: 100px;padding-right: 100px;">
        <div class="row">
            <h1 style="color:brown">Đăng nhập</h1>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="tendangnhap">Tên đăng nhập</label>
            </div>
            <div class="col-75">
                <input type="text" id="tendangnhap" name="tendangnhap" placeholder="Nhập tên tài khoản của bạn">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="passwd">Password</label>
            </div>
            <div class="col-75">
                <input type="text" id="passwd" name="passwd" placeholder="Nhập mật khẩu của bạn">
            </div>
        </div>
        <div class="row">
            <input type="submit" id="summit" name="summit" value="Đăng nhập" />
        </div>
    </form>
</div>



