@model IEnumerable<HomeShopping.Models.Product>

@{
    ViewData["Title"] = "Sony";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>
    <div class="container-fluid">
        <div class="wrap">
            <div class="header">


                <div class="header_slide">
                    <div class="header_bottom_right">
                        <div class="slider">
                            <div class="container">
                                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:780px;">
                                    <!-- Indicators -->
                                    <ol class="carousel-indicators">
                                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                        <li data-target="#myCarousel" data-slide-to="1"></li>
                                        <li data-target="#myCarousel" data-slide-to="2"></li>
                                    </ol>

                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <img src="~/images/banner-web01-01.png" alt="Los Angeles" style="width:100%; height:300px">
                                        </div>

                                        <div class="item">
                                            <img src="~/images/slide-2-image.jpg" alt="Chicago" style="width:100%; height:300px">
                                        </div>

                                        <div class="item">
                                            <img src="~/images/slide-3-image.jpg" alt="New york" style="width:100%; height:300px">
                                        </div>
                                    </div>

                                    <!-- Left and right controls -->
                                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>

       
        <div class="main">
            <div class="content">
                <div class="content_top">
                    <div class="heading">
                        <h3>SONY</h3>
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="section group">
                    @foreach (var item in Model)
                    {
                    <div class="grid_1_of_4 images_1_of_4" style="width:195px;margin-left:0px">
                        <a asp-action="Details" asp-route-id="@item.ProductId">
                            <img src=~/images/@item.ProductImage />
                        </a>
                        @*<a asp-controller="Detail" asp-action="Index" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName"><img src="images/@item.ProductImage" alt="" /></a>*@<a asp-controller="Detail" asp-action="Index" asp-route-id="@item.ProductId" asp-route-name="@item.ProductName"><img src="images/@item.ProductImage" alt="" /></a>

                        <h2 style="font-size:18px;padding-top:5px">@item.ProductName</h2>
                        <h2 style="font-size:18px;">@item.Descriptions</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p style="padding-left:47px"><span class="rupees">@item.ProductPrice.ToString("C")</span></p>
                            </div>
                            <div class="add-cart">
                                <h4 style="padding-right:35px;">
                                    <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.ProductId">Buy Now</a>
                                </h4>
                            </div>
                            <div class="clear"></div>
                            
                          
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>